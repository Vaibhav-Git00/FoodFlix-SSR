<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  {{> navbar}}
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>üìù Blogs</h1>
      <a href="/blogs/add" class="btn btn-primary">Add New</a>
    </div>
    <div class="row">
      {{#each blogs}}
        <div class="col-md-6 mb-4">
          <div class="card">
            {{#if (eq this.id ../selectedEditId)}}
              <form action="/blogs/edit/{{this.id}}" method="POST" class="p-3">
                <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title" value="{{this.title}}" required>
                </div>
                <div class="mb-3">
                  <label for="summary" class="form-label">Summary</label>
                  <textarea class="form-control" id="summary" name="summary" rows="3" required>{{this.summary}}</textarea>
                </div>
                <div class="mb-3">
                  <label for="author" class="form-label">Author</label>
                  <input type="text" class="form-control" id="author" name="author" value="{{this.author}}" required>
                </div>
                <div class="mb-3">
                  <label for="date" class="form-label">Date</label>
                  <input type="date" class="form-control" id="date" name="date" value="{{this.date}}" required>
                </div>
                <div class="mb-3">
                  <label for="image" class="form-label">Image URL</label>
                  <input type="text" class="form-control" id="image" name="image" value="{{this.image}}" required>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <a href="/blogs" class="btn btn-secondary">Cancel</a>
              </form>
            {{else}}
              <img src="{{this.image}}" class="card-img-top" alt="Blog Image">
              <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.summary}}</p>
                <p class="text-muted">By {{this.author}} on {{this.date}}</p>
                <div class="d-flex justify-content-between">
                  <a href="/blogs/edit/{{this.id}}" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/blogs/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  {{> footer}}
</body>
</html>
